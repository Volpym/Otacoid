<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bScan"
        android:layout_width="50dp"
        android:layout_height="46dp"
        android:background="@drawable/scan_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toEndOf="@+id/barcode_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/barcode_edit_text"
        android:layout_width="306dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:inputType="textPersonName"
        android:text="Enter barcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/min_price_edit_text"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:ems="6"
        android:fontFamily="serif-monospace"
        android:inputType="numberDecimal"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/min_price_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/min_price_text_view"
        app:layout_constraintTop_toBottomOf="@+id/min_price_text_view"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/min_delivery_cost_edit_text"
        android:layout_width="202dp"
        android:layout_height="45dp"
        android:layout_marginStart="7dp"
        android:ems="6"
        android:fontFamily="serif-monospace"
        android:inputType="textPersonName"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/min_delivery_cost_text_view"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="@+id/min_delivery_cost_text_view"
        app:layout_constraintTop_toBottomOf="@+id/min_delivery_cost_text_view" />

    <EditText
        android:id="@+id/min_seller_edit_text"
        android:layout_width="200dp"
        android:layout_height="43dp"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:inputType="textPersonName"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/min_seller_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/min_seller_text_view"
        app:layout_constraintTop_toBottomOf="@+id/min_seller_text_view" />

    <ImageView
        android:id="@+id/product_image_view"
        android:layout_width="163dp"
        android:layout_height="210dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toEndOf="@+id/min_price_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/product_code_text_view"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/min_price_text_view"
        android:layout_width="59dp"
        android:layout_height="17dp"
        android:fontFamily="serif-monospace"
        android:text="Price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/minimum_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/minimum_text_view"
        app:layout_constraintTop_toBottomOf="@+id/minimum_text_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/product_code_text_view"
        android:layout_width="86dp"
        android:layout_height="17dp"
        android:fontFamily="serif-monospace"
        android:text="ASIN Code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/description_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/description_text_view"
        app:layout_constraintTop_toBottomOf="@+id/barcode_edit_text"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="379dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif-monospace"
        android:text="Description"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/bScan"
        app:layout_constraintStart_toStartOf="@+id/barcode_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/barcode_edit_text" />

    <TextView
        android:id="@+id/minimum_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="serif-monospace"
        android:text="Minimum"
        app:layout_constraintEnd_toEndOf="@+id/product_code_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/product_code_text_view"
        app:layout_constraintTop_toBottomOf="@+id/product_code_text_view" />

    <TextView
        android:id="@+id/min_delivery_cost_text_view"
        android:layout_width="68dp"
        android:layout_height="18dp"
        android:layout_marginEnd="136dp"
        android:fontFamily="serif-monospace"
        android:text="Delivery "
        app:layout_constraintEnd_toEndOf="@+id/min_price_edit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/min_price_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/min_price_edit_text" />

    <TextView
        android:id="@+id/min_seller_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Seller"
        app:layout_constraintEnd_toEndOf="@+id/min_delivery_cost_edit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/min_delivery_cost_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/min_delivery_cost_edit_text" />

    <TextView
        android:id="@+id/manufacturer_text_view"
        android:layout_width="155dp"
        android:layout_height="18dp"
        android:fontFamily="serif-monospace"
        android:text="Manufacturer"
        app:layout_constraintEnd_toEndOf="@+id/product_code_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/product_code_text_view"
        app:layout_constraintTop_toBottomOf="@+id/product_code_text_view" />

</android.support.constraint.ConstraintLayout>